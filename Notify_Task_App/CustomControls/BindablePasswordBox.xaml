<UserControl x:Class="Notify_Task_App.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Notify_Task_App.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox x:Name="txtPassword"
           FontSize="12"
           FontWeight="Medium"
           FontFamily="Montserrat"
           Foreground="{StaticResource color10}"
           CaretBrush="{StaticResource plainTextColor1}"
           BorderBrush="{StaticResource plainTextColor1}"
           BorderThickness="0,0,0,2"
           VerticalAlignment="Center"
           Padding="20,0,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/Notify_Task_App;component/Images/key-icon.png"
                        Stretch="None"
                        AlignmentX="Left"/>
        </PasswordBox.Background>

    </PasswordBox>
</UserControl>